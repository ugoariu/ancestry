<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="marriage" path="/">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Marriage:index</default>
    </route>

    <route id="marriage_show" path="/{id}/show">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Marriage:show</default>
    </route>

    <route id="marriage_new" path="/new">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Marriage:new</default>
    </route>

    <route id="marriage_create" path="/create">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Marriage:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="marriage_edit" path="/{id}/edit">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Marriage:edit</default>
    </route>

    <route id="marriage_update" path="/{id}/update">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Marriage:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="marriage_delete" path="/{id}/delete">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Marriage:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
