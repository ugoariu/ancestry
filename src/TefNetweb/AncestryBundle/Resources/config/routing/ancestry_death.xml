<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="death" path="/">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Death:index</default>
    </route>

    <route id="death_show" path="/{id}/show">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Death:show</default>
    </route>

    <route id="death_new" path="/new">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Death:new</default>
    </route>

    <route id="death_create" path="/create">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Death:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="death_edit" path="/{id}/edit">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Death:edit</default>
    </route>

    <route id="death_update" path="/{id}/update">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Death:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="death_delete" path="/{id}/delete">
        <default key="_controller">TefNetwebAncestryBundle:Ancestry\Death:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
